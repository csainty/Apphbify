@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Apphbify.ViewModels.SitesViewModel>
@{
    Layout = "Master.cshtml";
}
<div class="page-header">
    <h1>Deployed Sites</h1>
</div>
<p>A list of the sites you curently have running on AppHarbor.<br />
    You can enable build status notifications by simply clicking on the buttons in the notifications column.</p>
<table class="table table-bordered table-striped" id="sitesTable">
    <tbody>
        @foreach (var site in Model.Sites)
        {
            <tr class="site" data-slug="@site.Slug">
                <td>
                    <h3>@site.Name (@site.Slug)</h3>
                </td>
                <td>
                    <button class="btn btn-info enable-email-notification">Email</button>
                </td>
                <td><a href="@site.Url" class="btn btn-small btn-success" target="_blank" rel="external nofollow">Configuration</a> <a href="http://@(site.Slug).apphb.com/" class="btn btn-small btn-success" target="_blank" rel="external">View Site</a> </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="enableEmailModal">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
        <h3>Enable Email Notification</h3>
    </div>
    <div class="modal-body">
        <p>Enter an email address to have notifcations sent to you when each build is finished.</p>
        <input type="text" placeholder="Email Address..." id="emailAddress" />
        <span class="badge badge-error hide tt" id="emailAddressError" rel="tooltip" title="Please enter an email address">!</span>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-primary" id="confirmEmailButton">Enable</a> <a href="#" class="btn" data-dismiss="modal">Cancel</a>
        <p id="emailStatus"></p>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="/Content/js/Sites.min.js"></script>
}
